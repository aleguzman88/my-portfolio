<!-- views/update.ejs -->

<h1>Update Contact</h1>

<form method="post" action="/update/<%= contact._id %>">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= contact.name %>">
  </div>
  <div>
    <label for="contactNumber">Contact Number:</label>
    <input type="text" id="contactNumber" name="contactNumber" value="<%= contact.contactNumber %>">
  </div>
  <div>
    <label for="email">Email Address:</label>
    <input type="email" id="email" name="email" value="<%= contact.email %>">
  </div>
  <div>
    <button type="submit">Update</button>
    <button type="button" onclick="window.location.href='/business_cl'">Cancel</button>
    <button type="button" onclick="document.getElementById('delete-form').submit()">Delete</button>
  </div>
</form>

<form id="delete-form" method="post" action="/delete/<%= contact._id %>">
  <input type="hidden" name="_method" value="DELETE">
</form>
